<div class="container" id="container1">
  <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Редагувати інформацію</h3>
        </div>
        <div class="panel-body">
          <%= form_for :user, url: user_path(@user), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label 'Електронна пошта' %>
          <%= f.text_field :mail, placeholder: 'Введіть пошту', class: 'form-control', :required => true %>
              </div>
              <div class="form-group">
                <%= f.label 'Номер телефону' %>
                <%= f.phone_field :phone, placeholder: 'Введіть номер телефону', class: 'form-control', :required => true %>
              </div>
              <div class="form-group">
                <%= f.label 'Адреса доставки' %>
                <%= f.text_field :address, placeholder: 'Вкажіть адресу', class: 'form-control', :required => true %>
              </div>
              <%= f.submit value: 'Зберегти', class: 'btn btn-block btn-success' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>

  .centered-form {
    margin-top: 120px;
    margin-bottom: 120px;
  }

  .centered-form .panel {
    background: rgba(255, 255, 255, 0.8);
    box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
  }
</style>