<div class="container">
    <div class="col-xs-12 col-sm-8 col-md-5 col-sm-offset-2 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Зробити замовлення</h3>
        </div>
        <div class="panel-body">
          <%= form_for :item, url: order_items_path, method: :post do |f| %>
              <div class="form-group">
                <%= f.text_field :url, class: 'form-control input-sm', placeholder: 'Вставте url...' %>
              </div>
              <div class="form-group">
                <%= f.text_field :name, class: 'form-control input-sm', placeholder: 'Введіть назву товара...' %>
              </div>
              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= f.text_field :size, class: 'form-control input-sm', placeholder: 'Введіть розмір...' %>
                  </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= f.text_field :unit_price, class: 'form-control input-sm', placeholder: 'Введіть ціну...' %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= f.text_field :color, class: 'form-control input-sm', placeholder: 'Колір...' %>
                  </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= f.number_field :quantity, class: 'form-control input-sm', placeholder: 'Кількість...' %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <%= f.text_area :u_comment, class: 'form-control input-sm', placeholder: 'Коментарі/Побажання...' %>
              </div>
              <%= f.submit value: 'Додати в корзину', class: 'btn btn-block btn-success' %>
          <% end %>
        </div>
      </div>
    </div>
</div>

