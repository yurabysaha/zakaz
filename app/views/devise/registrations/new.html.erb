<div class="container">
      <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title text-center">Реєстраційна форма</h3>
            </div>
            <div class="panel-body">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <div class="form-group">
                    <%= f.text_field :first_name, class: 'form-control input-sm', placeholder: 'Ваше ім`я' %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :last_name, class: 'form-control input-sm', placeholder: 'Прізвище' %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :email, class: 'form-control input-sm', placeholder: 'Введіть пошту' %>
                  </div>
                  <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                      <div class="form-group">
                        <%= f.password_field :password, class: 'form-control input-sm', placeholder: 'Введіть пароль' %>
                      </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                      <div class="form-group">
                        <%= f.password_field :password_confirmation, class: 'form-control input-sm', placeholder: 'Повторіть пароль' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= f.telephone_field :phone, class: 'form-control input-sm', placeholder: 'Введіть номер телефону' %>
                  </div>
                  <%= f.submit value: 'Зареєструватись', class: 'btn btn-block btn-success' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <style>

      .centered-form {
        margin-top: 120px;
        margin-bottom: 120px;
      }

      .centered-form .panel {
        background: rgba(255, 255, 255, 0.8);
        box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
      }
    </style>